<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Email template -->
        <record id="on_update_status" model="mail.template">
            <field name="name">Registration - Send by Email</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Congrats ${object.name}</field>
            <field name="model_id" ref="blood_donor_management.model_res_partner"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
            <ul class="o_mail_thread_message_tracking">
                <h1>Welcome to Blood donor Management</h1>
                <li>
                    Name: <span>${object.name}</span>
                </li>
                <p>Now you are eligible to donate blood</p>
                <p>You can view all blood bank & camp registration details </p>
       		</ul>
            ]]></field>
        </record>
    </data>
</odoo>