<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="tree_view_donor_details" model="ir.ui.view">
			<field name="name">List of all donors pending to be verified</field>
			<field name="model">donor.details</field>
			<field name="arch" type="xml">
				<tree>
					<field name="full_name"/>
					<field name="blood_group"/>
					<field name="previous_donation_date"/>
					<field name="gender"/>
					<field name="weight"/>
					<field name="hemoglobin"/>
					<field name="pulse_rate"/>
					<field name="blood_pressure"/>
					<field name="temperature"/>
					<field name="mobile"/>
					<field name="address"/>
					
					<field name="status"/>
				</tree>
			</field>
		</record>

		<record id="tree_view_manage_donor_query" model="ir.ui.view">
			<field name="name">All donor queries are as below:</field>
			<field name="model">donor.query</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="contact_no"/>
					<field name="email_id"/>
					<field name="message"/>
				</tree>
			</field>
		</record>


		<record id="action_verify_donor" model="ir.actions.act_window">
			<field name="name">Verify donor</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">donor.details</field>
			<field name="view_mode">tree</field>
			<field name="ref_view_id" ref="tree_view_donor_details"></field>
		</record>

		<record id="action_manage_donor_query" model="ir.actions.act_window">
			<field name="name">Manage donor query</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">donor.query</field>
			<field name="view_mode">tree</field>
			<field name="ref_view_id" ref="tree_view_manage_donor_query"></field>
		</record>

		<record id="action_update_donor_status" model="ir.actions.act_window">
			<field name="name">Update donor status</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">donor.details</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="admin" name="Admin" sequence="6"  parent="home"/>
			<menuitem id="verify_donor" name="Verify Donor" sequence="7" action="action_verify_donor" parent="admin"/>
			<menuitem id="manage_donor_query" name="Manage Donor Query" sequence="8" action="action_manage_donor_query" parent="admin"/>
			<menuitem id="update_donor_status" name="Update Donor Status" sequence="9" action="action_update_donor_status" parent="admin"/>
	</data>
</odoo>