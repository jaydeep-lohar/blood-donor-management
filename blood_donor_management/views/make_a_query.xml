<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>


		<record id="view_make_a_query" model="ir.ui.view">
			<field name="name">view.make.a.query</field>
			<field name="model">user.query</field>
			<field name="arch" type="xml">
				<form string="Make a query">
					<sheet>
						<group>
							<group>
								<field name="name" required='1'/>
								<field name="contact_no"/>
								<field name="email_id" required='1'/>
								<field name="message" required='1'/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>



		<record id="action_make_a_query" model="ir.actions.act_window">
			<field name="name">All User Queries</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">user.query</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_make_a_query"/>
		</record>




	<menuitem id="make_a_query" name="Make a Query" sequence="5"  action="action_make_a_query" parent="client"/>

	</data>
</odoo>