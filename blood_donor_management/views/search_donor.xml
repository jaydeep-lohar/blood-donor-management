<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_search_donor" model="ir.ui.view">
			<field name="name">view.search.donor</field>
			<field name="model">donor.details</field>
			<field name="arch" type="xml">
				<form string="Search Donor">
					<sheet>
						<group>
							<group>
								<field name="blood_group_id" required='1'/>
								<field name="city"/>
								<!-- <field name="email_id" required='1'/>
								<field name="message" required='1'/> -->
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>



		<record id="action_search_donor" model="ir.actions.act_window">
			<field name="name">Search your required donor</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">donor.details</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_search_donor"/>
		</record>

	<menuitem id="search_donor" name="Search Donor" sequence="4"  action="action_search_donor" parent="client"/>

</data>
</odoo>