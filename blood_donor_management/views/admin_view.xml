<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- ................Verify donor...................-->
		<record id="tree_view_donor_details" model="ir.ui.view">
			<field name="name">List of all available Donors</field>
			<field name="model">res.partner</field>
			<field name="arch" type="xml">
				<tree>
					<field name="donor_status"/>
					<field name="name"/>
					<field name="blood_group"/>
					<field name="previous_donation_date"/>
					<field name="gender"/>
					<field name="weight"/>
					<field name="hemoglobin"/>
					<field name="pulse_rate"/>
					<field name="temperature"/>
					<field name="diastolic"/>
					<field name="systolic"/>
					<field name="mobile"/>
					<field name="street"/>

					<field name="city"/>
					<field name="state_id"/>


				</tree>
			</field>
		</record>

		<record id="action_verify_donor" model="ir.actions.act_window">
			<field name="name">List of all available Donors</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_view_donor_details"/>
			
		</record>


		<!-- ................Blood bank details...................-->
		<record id="tree_view_blood_bank_details" model="ir.ui.view">
			<field name="name">List of all blood bank</field>
			<field name="model">res.partner</field>
			<field name="arch" type="xml">
				<tree>
           			<field name="type1"></field>
            		<field name="name"></field>
            		<field name="contact_person"></field>
            		<field name="phone"></field>
            		<field name="mobile"></field>
            		<field name="email"></field>
            		<field name="street"></field>
            		<field name="street2"></field>
            		<field name="website"></field>
            		<field name="city"></field>
				</tree>
			</field>
		</record>

		<record id="action_blood_bank_details" model="ir.actions.act_window">
			<field name="name">List of all blood banks</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_view_blood_bank_details"/>
			
		</record>


		<!-- ................Camp details tree view...................-->
		<record id="tree_view_registered_camp_details" model="ir.ui.view">
			<field name="name">List of all donor queries</field>
			<field name="model">res.partner</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"></field>
            		<field name="blood_bank_ref"></field>
            		<field name="camp_date"></field>
            		<field name="camp_time"></field>
            		<field name="person_name"></field>
            		<field name="mobile"></field>
            		<field name="email"></field>
            		<field name="street"></field>
            		<field name="street2"></field>
            		<field name="city"></field>
            		<field name="message"></field>
           		</tree>
			</field>
		</record>

		<record id="action_camp_details" model="ir.actions.act_window">
			<field name="name">Registered Camp details</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_view_registered_camp_details"/>
			
		</record>

		<!-- ................Donor query...................-->
		<record id="tree_view_donor_query_details" model="ir.ui.view">
			<field name="name">List of all donor queries</field>
			<field name="model">res.partner</field>
			<field name="arch" type="xml">
				<tree>
					<field name="query_status" groups="blood_donor_management.blood_donor_group_admin"/>
					<field name="name"/>
					<field name="message"/>
					<field name="mobile"/>
					<field name="email"/>
				</tree>
			</field>
		</record>

		<record id="action_donor_query" model="ir.actions.act_window">
			<field name="name">List of all donor queries</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_view_donor_query_details"/>
			
		</record>
		<menuitem id="admin_view" name="ADMIN" sequence="3" parent="home"/>
			<menuitem id="verify_donor" name="Verify donor" sequence="4" action="action_verify_donor" parent="admin_view"/>
			<menuitem id="blood_bank_details" name="Blood bank details" sequence="5" action="action_blood_bank_details" parent="home"/>
			<menuitem id="camp_details" name="Registered Camp details" sequence="6" action="action_camp_details" parent="home"/>
			<menuitem id="donor_query" name="Donor Query" sequence="7" action="action_donor_query" parent="admin_view"/>
		<menuitem id="camp_admin_view" name="ADMIN at camp" sequence="8" parent="home"/>
			<menuitem id="update_donor_status" name="Update donor Status" sequence="7" action="action_verify_donor" parent="camp_admin_view"/>
	</data>
</odoo>