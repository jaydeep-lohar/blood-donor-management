<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_donor_details" model="ir.ui.view">
				<field name="name">view.donor.details</field>
				<field name="model">donor.details</field>
				<field name="arch" type="xml">
					<form>
						<sheet>
							<group>
								<group>
									<field name="full_name"/>
									<field name="mobile"/>
								</group>
								<group>
									<field name="email_id"/>
									<field name="date_of_birth"/>
								</group>
							</group>
							<group>
								<group>
									<field name="gender"/>
									<field name="blood_group_id"/>
								</group>
								<group>
									<field name="address"/>
									<field name="message"/>
									<field name="city"/>
								</group>
							</group>
						
						</sheet>
					</form>
				</field>
			</record>

		 <record id="tree_donor_details" model="ir.ui.view">
			<field name="name">tree.donor.details</field>
			<field name="model">donor.details</field>
			<field name="arch" type="xml">
				<tree string="Display Donor details">
					<field name="full_name"/>
					<field name="address"/>
					<field name="email_id"/>
					<field name="date_of_birth"/>
					<field name="gender"/>
					<field name="blood_group_id"/>
					<field name="mobile"/>
					<field name="message"/>
					<field name="city"/>

				</tree>
			</field>
		</record> 

		<record id="action_become_donor" model="ir.actions.act_window">
			<field name="name">Become A Donor</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">donor.details</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_donor_details"/>
		</record>


			<menuitem id="menu_home" name="Blood donor and group management" sequence="1"/>
		
			<menuitem id="client" name="Client__" sequence="2" parent="menu_home"/>
				<menuitem id="become_donor" name="Become a donor" sequence="3" action="action_become_donor" parent="client"/>
				
			
			
	</data>
</odoo>
