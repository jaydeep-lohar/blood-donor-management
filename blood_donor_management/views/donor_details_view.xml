<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="form_view_donor_details" model="ir.ui.view">
			<field name="name">Become A Donor</field>
			<field name="model">donor.details</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="full_name" required='1' />
								<field name="blood_group" required='1' />
								<field name="previous_donation_date" placeholder=" > 54_days" required='1' />
								<field name="gender"  widget="radio"/>
								<field name="weight" required='1' placeholder="Female > 50kg,Male > 45kg"/>
								<field name="pulse_rate" placeholder="60 &lt;= x &lt;= 110 " required='1' />
							</group>
							<group>
								<field name="hemoglobin" placeholder=" > 12.5 gm" required='1' />
								<field name="systolic" placeholder=" &lt;= 180 mm " required='1' />
								<field name="diastolic" placeholder=" &lt;=  100 mm" required='1' />
								<field name="temperature" placeholder=" &lt;= 37.5 Celsius" required='1' />
								<field name="mobile" />
								<field name="address"/>
							</group>
						</group>
						<group>
							<field name='image' widget="image" class="oe_avatar" required='1'/> 
						</group>
					</sheet>
				</form>
			</field>
		</record>
			
		<record id="tree_view_donor_details" model="ir.ui.view">
			<field name="name">List of all available Donors</field>
			<field name="model">donor.details</field>
			<field name="arch" type="xml">
				<tree>
					<field name="full_name"/>
					<field name="blood_group"/>
					<field name="previous_donation_date"/>
					<field name="gender"/>
					<field name="weight"/>
					<field name="hemoglobin"/>
					<field name="pulse_rate"/>
					<field name="blood_pressure"/>
					<field name="temperature"/>
					<field name="mobile"/>
					<field name="address"/>
					
					<field name="status"/>
				</tree>
			</field>
		</record>




		<record id="action_donor_details_view1" model="ir.actions.act_window">
			<field name="name">Action for donor details</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">donor.details</field>
			<field name="view_mode">tree,form</field>
			
		</record>
		
		<menuitem id="home" name="Blood donor management system" sequence="1"/>
			<menuitem id="become_a_donor" name="Become a donor" sequence="2" action="action_donor_details_view1" parent="home"/>
	</data>
</odoo>