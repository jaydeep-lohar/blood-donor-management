<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="form_view_camp_registraion" model="ir.ui.view">
				<field name="name">Register a Camp</field>
				<field name="model">camp.registration.details</field>
				<field name="arch" type="xml">
					<form string="Camp Registration">
						<sheet>
							<group>
								<group>
									<field name="blood_bank_id" required='1'/>
									<!-- domain="[('district_id', '=',district_id)] -->
								</group>
							</group>
							<group>
								<group>
									<field name="camp_name" required='1'/>
									<field name="camp_venue" required='1'/>
								</group>
								<group>
									<field name="camp_date" required='1'/>
									<field name="time" required='1'/>
								</group>
							</group>
							<group>
								<group>
									<field name="person_name" required='1'/>
									<field name="contact_no" required='1'/>
								</group>
								<group>
									<field name="email_Id" required='1'/>
									<field name="message" required='1'/>
								</group>
							</group>
						
						</sheet>
					</form>
				</field>
		</record>


		<record id="tree_view_camp_registration" model="ir.ui.view">
			<field name="name">List of all registered camps</field>
			<field name="model">camp.registration.details</field>
			<field name="arch" type="xml">
				<tree>
					<field name="blood_bank_id"/>
					<field name="camp_name"/>
					<field name="camp_venue"/>
					<field name="camp_date"/>
					<field name="time"/>
					<field name="person_name"/>
					<field name="contact_no"/>
					<field name="email_Id"/>
					<field name="message"/>
				</tree>
			</field>
		</record>

			
		<record id="action_camp_registration" model="ir.actions.act_window">
			<field name="name">Registered Camp</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">camp.registration.details</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="camp_registration" name="Camp Registration" sequence="4" action="action_camp_registration" parent="home"/>
	</data> 
</odoo>

