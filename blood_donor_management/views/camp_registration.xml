<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
			<record id="view_camp_registraion_details" model="ir.ui.view">
				<field name="name">view.camp.registration.details</field>
				<field name="model">camp.registration.details</field>
				<field name="arch" type="xml">
					<form string="Camp Registration">
						<sheet>
							<group>
									<group>
									<field name="district_id"/>
									<field name="blood_bank_id" domain="[('district_id', '=',district_id)]"/>
									<field name="organization_id"/>
								</group>
							</group>
							<group>
								<group>
									<field name="camp_name"/>
									<field name="camp_venue"/>
								</group>
								<group>
									<field name="camp_date"/>
									<field name="time"/>
								</group>
							</group>
							<group>
								<group>
									<field name="person_name"/>
									<field name="contact_no"/>
								</group>
								<group>
									<field name="email_Id"/>
									<field name="message"/>
								</group>
							</group>
						
						</sheet>
					</form>
				</field>
			</record>

			
		<record id="action_camp_registration" model="ir.actions.act_window">
			<field name="name">Registered Camp</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">camp.registration.details</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_blood_3" name="Camp Registration" sequence="9" action="action_camp_registration" parent="client"/>
	</data> 
</odoo>

